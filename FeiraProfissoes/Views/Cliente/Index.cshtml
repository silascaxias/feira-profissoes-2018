@using FeiraProfissoes.Database

@model List<Cliente>
@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-8"><h4>Clientes</h4></div>
                    <div class="col-md-4">
                        <a href="/Cliente/Novo" class="btn btn-success float-right">Novo</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Telefone</th>
                            <th>Endereço</th>
                            <th><center>Ações</center></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Cliente cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Nome</td>
                                <td>@cliente.Telefone</td>
                                <td>@cliente.Endereco</td>
                                <td>
                                    <center>
                                        <a href="/Cliente/Editar/@cliente.Id" class="btn btn-warning">Editar</a>
                                        <a href="/Cliente/Deletar/@cliente.Id" class="btn btn-danger" onclick="return confirm('Confirma exclusão deste cliente?')">Excluir</a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>