@using FeiraProfissoes.Database

@model List<Cliente>
@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h3>Clientes</h3>
                <a href="/Cliente/Novo" class="btn">Novo</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Telefone</th>
                            <th>Endereço</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(Cliente cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Nome</td>
                                <td>@cliente.Telefone</td>
                                <td>@cliente.Endereco</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>